@import '_settings'

normalize-css()
base()

html
  height: 100%;

body
  height: 100%;
  font-family: $amiri;
  font-size: $font-size;
  line-height: 1.2;
  
a 
  color: $font-color;

img
  width: 100%;
  
h2
  font-family: $helvetica-black;
  font-size: 13px;
  text-transform: uppercase;

.wrapper {
  padding: 45px 100px 100px 100px;
}

@media only screen and (max-width: $widthSmallScreen) and (min-width: $widthMobile){
  .wrapper {
    padding: 15px 40px 40px 40px;
  }
}
@media only screen and (max-width: $widthMobile) {
  .wrapper {
    padding: 15px 20px 20px 20px;
  }
}


