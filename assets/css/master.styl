@import '_settings'

normalize-css()
base()

*
  box-sixing: border-box;

html
  height: 100%;

body
  height: 100%;
  font-family: $amiri;
  font-size: $font-size;
  line-height: 1.2;
  
a 
  color: $font-color;

img
  width: 100%;
  
h2
  font-family: $helvetica-black;
  font-size: 13px;
  text-transform: uppercase;

.wrapper {
  padding: 45px 100px 100px 100px;
}

.header
  height: 50px;

@media only screen and (max-width: $widthSmallScreen) and (min-width: $widthMobile){
  .wrapper {
    padding: 15px 40px 40px 40px;
  }
}
@media only screen and (max-width: $widthMobile) {
  .wrapper {
    padding: 15px 20px 20px 20px;
  }

  .header{
    height: 30px;
  }

  .header > a {
    text-decoration: none;
    text-transform: uppercase;
    color: $font-color;
    font-family: $helvetica-black;
    font-size: $font-size-mobile;
  }
}


.header > a
  text-decoration: none;
  text-transform: uppercase;
  color: $font-color;
  font-family: $helvetica-black;
  font-size: 13px;
   
.headerLeft
  float: left;
.headerRight
  float: right;
  
.externalLink
  padding: 0 5px;

