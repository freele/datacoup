@import '_settings'

normalize-css()
base()

html
  height: 100%;

body
  height: 100%;
  font-family: $amiri;
  line-height: 1.3;
  
a 
  color: $font-color;

img
  width: 100%;
  
h2
  font-family: $helvetica-black;
  font-size: 13px;
  text-transform: uppercase;
  margin-top: 90px;
  margin-bottom: 50px;

.mainWrapper
  width: 100%;

// .mainWrapper div
//   padding-top: 7px;

.contentLevel0
  font-size: $font-size-l0;
.contentLevel0 > div
  padding-bottom: 100px;

.contentLevel1
  font-size: $font-size-l1;
  padding: 50px 0px 50px $padding-l1;
  display: none; // temporary commented
.contentLevel1 > div
  padding: 20px 0px;

.contentLevel2
  font-size: $font-size-l2;
  padding: 50px 0px 50px $padding-l2;
  display: none; // temporary commented
.contentLevel2 > div
  padding: 16px 0px;

.contentLevel3
  font-size: $font-size-l3;
  padding: 25px 0px 25px $padding-l3;
  display: none; // temporary commented
.contentLevel3 > div
  padding: 10px 0;

.expandable
  color: $font-color;
  cursor: pointer;
  text-decoration: underline;
  
.header
  height: 50px;

.header > a
  text-decoration: none;
  text-transform: uppercase;
  color: $font-color;
  font-family: $helvetica-black;
  font-size: 13px;
   
.headerLeft
  float: left;
.headerRight
  float: right;
  
.externalLink
  padding: 0 5px;
  
.liWrapper {
  padding: 10px 0px;
}
.numberCircle {
  border-radius: 50%;
  behavior: url(PIE.htc); /* remove if you don't care about IE8 */

  width: 32px;
  height: 32px;
  line-height: 36px;
  margin-right: 10px;
  padding: 8px;
  
  background: #fff;
  border: 2px solid $font-color;
  text-align: center; 
  float: left;
}

.wrapper {
  padding: 50px 100px 100px 100px;
}

.wrapperVideo {
  background: #000;
  color: #fff;
  height: 100%;
}
.headerVideo > a {
  color: white;
}

.description {
  font-size: 26px;
}

.papers {
  font-size: 16px;
}

.team {
  font-size: 16px;
}

.press {
  font-size: 16px;
}

.paperLink {
  font-weight: bold;
  text-decoration: none;
}
  
