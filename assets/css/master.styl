.header
  height: 50px;

.header > a
  text-decoration: none;
  text-transform: uppercase;
  color: $font-color;
  font-family: $helvetica-black;
  font-size: 13px;
   
.headerLeft
  float: left;
.headerRight
  float: right;
  
.externalLink
  padding: 0 5px;

