@import '_settings'

normalize-css()
base()

body
  padding: 100px;
  font-family: $amiri;
  line-height: 1.3;

a 
  color: $font-color;

img
  width: 100%;

.mainWrapper
  width: 100%;

// .mainWrapper div
//   padding-top: 7px;

.contentLevel0
  font-size: $font-size-l0;
.contentLevel0 > div
  padding-top: 20px;

.contentLevel1
  font-size: $font-size-l1;
  padding-left: $padding-l1;
  display: none; // temporary commented
.contentLevel1 > div
  padding: 15px 0;

.contentLevel2
  font-size: $font-size-l2;
  padding-left: $padding-l2;
  display: none; // temporary commented
.contentLevel2 > div
  padding: 10px 0;

.contentLevel3
  font-size: $font-size-l3;
  padding-left: $padding-l3;
  display: none; // temporary commented
.contentLevel3 > div
  padding: 10px 0;

.expandable
  color: $font-color;
  cursor: pointer;
  text-decoration: underline;
  
.header
  height: 100px;

.header > a
  text-decoration: underline;
  text-transform: uppercase;
  color: $font-color;
  font-family: $helvetica-black;
  font-size: 13px;
  
  
.headerLeft
  float: left;
.headerRight
  float: right;
  
.externalLink
  padding: 0 5px;
  
  
