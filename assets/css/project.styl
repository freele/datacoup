@import '_settings'

.closeButton
  display: none;

.contentLevel0
  font-size: $font-size-l0;
.contentLevel0 > div
  padding-bottom: 80px;  
.contentLevel0 > div > .expandable
  // text-shadow: -1px -1px 0 #fff, 1px -1px 0 #fff, -1px 1px 0 #fff, 1px 1px 0 #fff;
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 29px, #000 29px, #000 32px, rgba(0, 0, 0, 0) 32px);
.contentLevel0 > .lastElement
  padding-bottom: 0px;


.contentLevel1
  font-size: $font-size-l1;
  padding: 0px 0px 50px $padding-l1;
  display: none; // temporary commented
.contentLevel1 > div
  padding: 50px 0px 0px 0px;
.contentLevel1 > div > ol
  padding: 50px 0px 0px 0px;
  margin: 0px;
.liText1 > span,
.contentLevel1 > div > .expandable
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 18px, #000 18px, #000 20px, rgba(0, 0, 0, 0) 20px);
.contentLevel1 a
  font-size: $font-size-l1*0.7;
.contentLevel1.lastElement
  padding-bottom: 0px;

.contentLevel2
  font-size: $font-size-l2;
  padding: 0px 0px 40px $padding-l2;
  display: none; // temporary commented
.contentLevel2 > div
  padding: 40px 0px 0px 0px;
.contentLevel2 a
  font-size: $font-size-l2*0.7;
.contentLevel2 > div > .expandable
  background-image: linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 13px, #000 13px, #000 14px, rgba(0, 0, 0, 0) 14px);
.contentLevel2.lastElement
  padding-bottom: 0px;
.contentLevel2 > div > ol
  padding: 40px 0px 0px 0px;
  margin: 0px;

.contentLevel3
  font-size: $font-size-l3;
  padding: 0px 0px 35px $padding-l3;
  display: none; // temporary commented
.contentLevel3 > div
  padding: 35px 0px 0px 0px;
.contentLevel3 a
  font-size: $font-size-l3*0.7;
.contentLevel3.lastElement
  padding-bottom: 0px;

.expandable
  color: $font-color;
  cursor: pointer;

@media only screen and (max-width: $widthMobile) {
  $thinBorder = linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 8px, #000 8px, #000 9px, rgba(0, 0, 0, 0) 9px);
  $strongBorder = linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 5px, #000 5px, #000 9px, rgba(0, 0, 0, 0) 9px);
  $leftBorder = linear-gradient(to right, #FFF, #FFF 0px, #000 0px, #000 4px, #FFF 4px);

  .closeButton {
    display: block;
  }
  
  .expanded {
    background-image: $strongBorder !important;
  }
  
  .contentLevel0 {
    font-size: $font-size-larger1-mobile;
  }
  .contentLevel0 > div {
    padding-bottom: 15px;  
  }
  .contentLevel0 > div > .expandable {
    background-image: $thinBorder;
  }
  .contentLevel0 > .lastElement{
    padding-bottom: 0px;
  }


  .contentLevel1 {
    font-size: $font-size-larger1-mobile;
    padding: 0px 0px 0px $padding-l1-mobile;
    display: none; // temporary commented
    background-image: $leftBorder;
    margin-top: 20px;
    margin-bottom: 20px;
  }
  .contentLevel1 > div {
    padding-top: 20px;
  }
  .contentLevel1 > div:first-child {
    padding: 0px;
  }
  .contentLevel1 > div > ol {
    padding: 15px 0px 0px 0px;
    margin: 0px;
  }
  .liText1 > span,
  .contentLevel1 > div > .expandable {
    background-image: $thinBorder;
  }
  .contentLevel1 a {
    font-size: $font-size-larger1-mobile*0.9;
  }
  .contentLevel1.lastElement {
    padding-bottom: 0px;
  }

  .contentLevel2 {
    font-size: $font-size-larger1-mobile;
    padding: 0px 0px 0px $padding-l2-mobile;
    display: none; // temporary commented
    background-image: $leftBorder;
    margin-top: 20px;
    margin-bottom: 20px;
  }
  .contentLevel2 > div{
    padding-top: 20px;
  }
  .contentLevel2 > div:first-child {
    padding: 0px;
  }
  .contentLevel2 a{
    font-size: $font-size-larger1-mobile*0.9;
  }
  .contentLevel2 > div > .expandable {
    background-image: $thinBorder;
  }
  .contentLevel2.lastElement {
    padding-bottom: 0px;
  }
  .contentLevel2 > div > ol {
    padding: 15px 0px 0px 0px;
    margin: 0px;
  }

  .contentLevel3 {
    font-size: $font-size-larger1-mobile;
    padding: 0px 0px 0px $padding-l3-mobile;
    display: none; // temporary commented
    background-image: $leftBorder;
    margin-top: 20px;
    margin-bottom: 20px;
  }
  .contentLevel3 > div {
    padding-top: 20px;
  }
  .contentLevel3 > div:first-child {
    padding: 0px;
  }
  .contentLevel3 a {
    font-size: $font-size-larger1-mobile*0.9;
  }
  .contentLevel3.lastElement {
    padding-bottom: 0px;
  }

  .expandable {
    color: $font-color;
    cursor: pointer;
  }
}
  